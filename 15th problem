i=13
counter=1
maximum=0
number=1
while i<=1000000:
    final=i
    while final !=1:
        if final % 2==0:
            final= final/2
            counter= counter+1
        else:
            final= 3*final + 1
            counter= counter+1
    if counter>maximum:
        maximum=counter
        number=i
    counter=1
    i=i+1
print(maximum,number)
